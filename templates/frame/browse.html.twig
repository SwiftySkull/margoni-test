{% extends 'base.html.twig' %}

{% block title %}Recherche par encadrement{% endblock %}

{% block frameActive %}active{% endblock %}

{% block body %}

<h1>Recherche par encadrement</h1>

<h2>Liste des encadrements</h2>

<table class="table">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Nom</th>
      <th scope="col">Actions</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {% for frame in frames %}

      {{ include('sample/_table.html.twig', {
        'variable': frame,
        'var' : 'frame',
        'unique' : frame.framing,
        })
      }}

    {% endfor %}
  </tbody>
</table>
<form action="{{ path('frame_add') }}" method="POST">
  <input type="hidden" name="token" value="{{ csrf_token('add-edit-item') }}"/>
  <button class="btn btn-success">Ajouter un nouveau type d'encadrement</button>
</form>

{% endblock %}
